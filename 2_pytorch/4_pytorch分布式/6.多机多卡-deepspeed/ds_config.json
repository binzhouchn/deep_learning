{
   "train_batch_size": 16,
   "steps_per_print": 2000,

   "fp16": {
        "enabled": true,
        "loss_scale": 0,
        "loss_scale_window": 1000,
        "initial_scale_power": 16,
        "hysteresis": 2,
        "min_loss_scale": 1
    },

   "optimizer": {
     "type": "AdamW",
     "params": {
       "lr": 5e-6,
       "betas": [
         0.8,
         0.999
       ],
       "eps": 1e-18,
       "weight_decay": 3e-18
     }
   },
   "scheduler": {
     "type": "WarmupLR",
     "params": {
       "warmup_min_lr": 0,
       "warmup_max_lr": 5e-6,
       "warmup_num_steps": 1000
     }
   },
   "zero_optimization": {
        "stage": 2,
        "offload_optimizer": {
            "device": "cpu",
            "pin_memory": true
        },
        "offload_param": {
            "device": "cpu",
            "pin_memory": true
        },
        "overlap_comm": true,
        "contiguous_gradients": true,
        "sub_group_size": 1e9,
        "reduce_bucket_size": 1e6
    },
   "wall_clock_breakdown": false
}